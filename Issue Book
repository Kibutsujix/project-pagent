    { {982,4,{ 23,04,2021,1 },"43255","It Ends with Us","Colleen Hoover"}, {342,4,{ 07,12,2021,1 },"31232","Pride and Prejudice","Jane Austen"} }
};
void issue();
int search(char *args, int choice);
int main()
{
    issue();
}
int books_occupied[5] = {2, 2, 2, 2, 2};

int search(char* args, int choice){

	int i, j;

	switch(choice){

		// search by author name
		case 1:
			for(i=0;i<GENRE;i++){
				for(j=0;j<books_occupied[i];j++){
					if(strcmp(args,(catalog[i][j].author_name))==0)
					{
					    catalog[i][j].ISSUE.status = 1;
						printbooks(i, j);
						return 1;
					}
						return 0;
				}
			}
			break;

		// search by book name
		case 2:
			for(i=0;i<GENRE;i++){
				for(j=0;j<books_occupied[i];j++){
					if(strcmp(args,(catalog[i][j].book_name))==0)
					{
					    catalog[i][j].ISSUE.status = 1;
						printbooks(i, j);
						return 1;
					}
						return 0;
				}
			}
			break;

		// search by ID
		case 3:
			for(i=0;i<GENRE;i++){
				for(j=0;j<books_occupied[i];j++){
					if(atoi(args) == atoi(catalog[i][j].id))
					{
					    catalog[i][j].ISSUE.status = 1;
						printbooks(i, j);
						return 1;
					}
					  return 0;
				}
			}
			break;
		}

	return -1;
  }
void issue()
{
    int flag = 0,choice;
    char author[50],name[50],bookid[50];
    printf("Enter 1. If you want a book based on author name \n 2.If you want a book based on Book name \n 3.If you want a book based on book ID \n");
    scanf("%d",choice);
    switch(choice)
    {
      case 1:
        printf("Enter the author name \n");
        gets(author);
        flag = search(author,choice);
        break;
      case 2:
        printf("Enter the book name \n");
        gets(name);
        flag = search(name,choice);
        break;
      case 3:
        printf("Enter the Book ID \n");
        gets(bookid);
        flag = search(bookid,choice);
        break;
    }
    if(flag)
        printf("Sorry we do not have the book you asked for \n");
    
}
